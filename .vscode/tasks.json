{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build-cpp",  // ビルドタスクの名前
        "type": "shell",
        "command": "g++",
        "args": [
            "-g",  // デバッグ情報を含む
            "${file}",
            "-o",
            "${workspaceFolder}/cpp/build/${fileBasenameNoExtension}"
        ],
        "group": {
            "kind": "build",
            "isDefault": true
        },
        "problemMatcher": ["$gcc"],
      },
      {
        "label": "Build Rust",
        "type": "shell",
        "command": "cargo",
        "args": ["build"],
        "group": { "kind": "build", "isDefault": true },
        "options": { "cwd": "${workspaceFolder}/rust" }
      }
    ]
  }
  